<div class="container text-center mt-5">
  <div class="card shadow-lg p-4">
    <div class="card-body">
      <i class="fa-solid fa-circle-xmark text-danger display-4"></i>
      <h1 class="text-danger mt-3">Pagamento Recusado</h1>
      <p class="lead">Houve um problema com seu pagamento.</p>

      <div class="alert alert-light border mt-4">
        <p><strong>Pedido ID:</strong> <%= @pedido.id %></p>
        <p><strong>Total:</strong> R$ <%= @pedido.total %></p>
        <p><strong>Método de Pagamento:</strong> <%= @pedido.metodo_pagamento %></p>
        <p><strong>Status:</strong> <span class="badge bg-danger"><%= @pedido.status %></span></p>
      </div>

      <h2 class="mt-4">Itens do Pedido</h2>
      <ul class="list-group mt-3">
        <% @pedido.item_pedido.each do |item| %>
          <li class="list-group-item d-flex justify-content-between">
            <span><strong><%= item.quantidade %>x</strong> <%= item.produto_nome %></span>
            <span class="fw-bold">R$ <%= item.preco_unitario %></span>
          </li>
        <% end %>
      </ul>

      <a href="/" class="btn btn-danger mt-4"><i class="fa-solid fa-house"></i> Voltar para a página inicial</a>
    </div>
  </div>
</div>
